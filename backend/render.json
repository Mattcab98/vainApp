{
    "name": "vainapp-backend",
    "env": "node",
    "buildCommand": "npm install && npm run build",
    "startCommand": "npm start",
    "healthCheckPath": "/health",
    "envVars": [
        {
            "key": "PORT",
            "value": "5000"
        },
        {
            "key": "MONGO_URI",
            "generateValue": false
        },
        {
            "key": "JWT_SECRET",
            "generateValue": true
        },
        {
            "key": "STRIPE_SECRET_KEY",
            "generateValue": false
        },
        {
            "key": "STRIPE_WEBHOOK_SECRET",
            "generateValue": false
        },
        {
            "key": "FRONTEND_URL",
            "generateValue": false
        }
    ]
}